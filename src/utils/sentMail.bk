/**
 * 
 * @param {object} emailConfig 
 * @param {object} mailOptions 
 */
function sentMail(emailConfig: object, mailOptions: object) {
    return new Promise(function (resolve, reject) {
        if (!mailOptions.from || !mailOptions.to) {
            throw Error('mailOptions invalid:' + JSON.stringify(mailOptions));
        }
        nodemailer.createTestAccount((err: NodeJS.ErrnoException, account: string) => {
            if (err) {
                reject(err);
                process.exit(1)
                throw err;
            }
            // create reusable transporter object using the default SMTP transport
            let transporter = nodemailer.createTransport(emailConfig || config.get('email'));
        
            // setup email data with unicode symbols
            // send mail with defined transport object
            transporter.sendMail(mailOptions, (error: NodeJS.ErrnoException, info: object) => {
                if (error) {
                    reject(error);
                    throw error;
                }
                // console.log('Message sent: %s', info.messageId);
                // Preview only available when sending through an Ethereal account
                // console.log('Preview URL: %s', nodemailer.getTestMessageUrl(info));
                resolve(info);
            });
        });
    });
}
export default sentMail;
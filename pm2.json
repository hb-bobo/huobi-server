{
    "apps": [
        {
            "name": "huobi-server",
            "script": "./app.js",
            "cwd": "./",
            "watch": [
                "app",
                "bin",
                "lib",
                "app.js"
            ],
            "ignore_watch": [
                "node_modules",
                "logs",
                "public",
                ".*"
            ],
            "env": {
                "NODE_ENV": "development"
            },
            "env_production" : {
                "NODE_ENV": "production"
            },
            "error_file": "./logs/err/app-err.log",
            "out_file": "./logs/out/app-out.log",
            "log_date_format": "YYYY-MM-DD HH:mZ"
        }
    ]
}